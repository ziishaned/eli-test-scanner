{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ES2024",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
